<?xml version="1.0" encoding="UTF-8"?>
<pipeline name="test">

    <module name="video0" type="camera">
        <setting name="fps" type="integer" value="200"/>
        <setting name="device" type="integer" value="0"/>
    </module>

    <module name="grayscale" type="grayscale">
        <setting name="input" type="frame" value="video0:OUTPUT"/>
    </module>

    <module name="gaussian" type="gaussian">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
        <setting name="size" type="integer" value="3"/>
        <setting name="weight" type="double" value="1.5"/>
    </module>

    <module name="canny" type="canny">
        <setting name="upper-threshold" type="integer" value="100"/>
        <setting name="lower-threshold" type="integer" value="50"/>
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
    </module>

    <module name="circles" type="circles">
        <setting name="input" type="frame" value="threshold:OUTPUT"/>
        <setting name="resolution" type="double" value="1"/>
        <setting name="method" type="string" value="gradient"/>
        <setting name="distance" type="double" value="5"/>
        <setting name="threshold" type="double" value="200.0"/>
        <setting name="votes" type="double" value="50"/>
        <setting name="min-radius" type="integer" value="10"/>
        <setting name="max-radius" type="integer" value="100"/>        
    </module>

    <module name="threshold" type="threshold">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
        <setting name="threshold" type="double" value="30"/>
        <setting name="max" type="double" value="255.0"/>
        <setting name="inverted" type="boolean" value="false"/>
    </module>

      <module name="foreground" type="foreground">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
        <setting name="learn" type="double" value="0.001"/>
        <setting name="threshold" type="integer" value="17"/>
    </module>


    <module name="erode" type="erode">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
    </module>

    <module name="blur" type="blur">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
        <setting name="size" type="integer" value="6"/>
    </module>



    <module name="median" type="median">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
        <setting name="size" type="integer" value="6"/>
    </module>

    <module name="sobel" type="sobel">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
        <setting name="size" type="integer" value="6"/>
    </module>









</pipeline>
