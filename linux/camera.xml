<?xml version="1.0" encoding="UTF-8"?>
<pipeline name="test">

    <module name="video0" type="camera">
       <setting name="fps" type="integer" value="200"/>
        <setting name="device" type="integer" value="0"/>
    </module>


   
   <module name="baseline" type="video">
        <setting name="fps" type="integer" value="200"/>
        <setting name="filename" type="string" value="../doc/rdi.avi"/>
    </module>


    <module name="grayscale" type="grayscale">
        <setting name="input" type="frame" value="video0:OUTPUT"/>
    </module>

    <module name="grayscale-histogram" type="histogram">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
    </module>

    <module name="grayscale-highpass" type="highpass">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
        <setting name="size1" type="integer" value="2"/>
        <setting name="size2" type="integer" value="2"/>
    </module>

     <module name="grayscale-highpass-fast-features" type="fast-features">
        <setting name="input" type="frame" value="grayscale-highpass:OUTPUT"/>
    </module>

    <module name="foreground" type="foreground">
        <setting name="input" type="frame" value="grayscale:OUTPUT"/>
        <setting name="learn" type="double" value="0.001"/>
    </module>

    <module name="foreground-histogram" type="histogram">
        <setting name="input" type="frame" value="foreground:OUTPUT"/>
    </module>

    <module name="blur" type="blur">
        <setting name="input" type="frame" value="foreground:OUTPUT"/>
        <setting name="size" type="integer" value="6"/>
    </module>

     <module name="video0-fast-features" type="fast-features">
        <setting name="input" type="frame" value="video0:OUTPUT"/>
    </module>


     <module name="forground-fast-features" type="fast-features">
        <setting name="input" type="frame" value="foreground:OUTPUT"/>
    </module>



     <module name="brighten" type="brighten">
        <setting name="input" type="frame" value="foreground:OUTPUT"/>
        <setting name="threshold" type="integer" value="28"/>
        <setting name="brighten" type="double" value="4.0"/>
        <setting name="dim" type="double" value="0.2"/>


    </module>

    <module name="forground-highpass" type="highpass">
        <setting name="input" type="frame" value="foreground:OUTPUT"/>
        <setting name="size1" type="integer" value="2"/>
        <setting name="size2" type="integer" value="2"/>
    </module>




    <module name="foreground-highpass-fast-features" type="fast-features">
        <setting name="input" type="frame" value="forground-highpass:OUTPUT"/>
    </module>


</pipeline>
